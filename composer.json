{
    "name": "orh/yaf",
    "type": "project",
    "description": "The Yaf Framework.",
    "keywords": [
        "framework",
        "yaf"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.0",
        "ext-yaf": "^3.0",
        "guzzlehttp/guzzle": "~6.5.0",
        "orh/yaf-framework": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.5.0",
        "friendsofphp/php-cs-fixer": "~2.17.0"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix"
    }
}
